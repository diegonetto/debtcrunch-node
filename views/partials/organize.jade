#debt-table-wrapper
  table#debt-table.table.table-condensed
    tfoot#sum-row
      td(colspan="2") Totals
      td#principal-total.center-col $100.66
      td(colspan="2")
      td#monthly-total.center-col $200.69
    tbody#debt-table-body
      tr.input-row
        td
          .view Enter a title
          #title-group.control-group.edit-wrapper
            .controls
              input(maxlength="35", data-field="title", type="text", placeholder="Enter a title")#debt-title.debt-input.edit
        td.center-col
          .view Select a type
          #type-group.control-group.edit-wrapper
            .controls
              select(data-field="type")#debt-type.debt-input.edit
                include /templates/debt-types
                  each type in DEBT_TYPES
                    option= type
        td.center-col
          .view Enter amount
          #principal-group.control-group.edit-wrapper
            .controls
              input(maxlength="35", data-field="title", type="text", placeholder="Principal")#debt-principal.debt-input.edit
        td.center-col
          .view Enter percentage
          #rate-group.control-group.edit-wrapper
            .controls
              input(maxlength="5", data-field="rate", type="text", placeholder="Rate")#debt-rate.debt-input.edit
        td.center-col
          .view Enter duration
          #repayment-group.control-group.edit-wrapper
            .controls
              input(maxlength="5", data-field="repayment", type="text", placeholder="Repayment")#debt-repayment.debt-input.edit
        td.center-col
          button(type="button")#debt-add.btn.btn-primary.btn-small Add

      tr.headings
        td Title
        td.center-col Type
        td.center-col Principal
        td.center-col Rate
        td.center-col Repayment
        td.center-col Monthly

  #table-notes
    p Double-click on a cell above to edit its value.

include templates/debt
