script(type="text/template")#debt-template
  td.title-cell 
    .view <%- title %>
    .edit-wrapper
      input(type="text", value!="<%- title %>", maxlength="35").edit.edit-title
  td.type-cell.center-col
    .view <%- type %>
    .edit-wrapper
      select.edit.edit-type
        option Credit Card
        option Stafford Loan
        option Perkins Loan
        option Plus Loan
  td.principal-cell.center-col
    .view <% print(accounting.formatMoney(principal)) %>
    .edit-wrapper
      input(type="text", value!="<%- principal %>", maxlength="18").edit.edit-principal
  td.rate-cell.center-col 
    .view <%- rate %>
    .edit-wrapper
      input(type="text", value!="<%- rate %>", maxlength="4").edit.edit-rate
  td.repayment-cell.center-col 
    .view <%- repayment %> months
    .edit-wrapper
      input(type="text",  value!="<%- repayment %>", maxlength="5").edit.edit-repayment
  td.center-col  $xx.xx  
    div#destroy-wrapper
      button.destroy-btn

